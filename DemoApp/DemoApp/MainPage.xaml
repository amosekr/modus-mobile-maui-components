<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Trimble.Modus.Components;assembly=Trimble.Modus.Components"
             x:Class="DemoApp.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <StackLayout Padding="10">

            
                    <Label Text="Without Icons"/>
                    <local:CustomButton 
                    x:Name="button"
                    Title = "XSmall"
            
                    Command="{Binding MyCommand}"
                    CommandParameter="Button5"
                 
                  />
                    <local:CustomButton 
                    x:Name="button2"
                    Title = "Small"
                    Command="{Binding MyCommand}"
                 
                    CommandParameter="Button5"
                    Size="Small"
                  />
                    <local:CustomButton 
                    x:Name="button3"
                    Title = "Default"
                    Command="{Binding MyCommand}"
                    CommandParameter="Button5"
                    
                    Size="Default"
                  />
                    <local:CustomButton 
                    x:Name="button4"
                    Title = "Large"
                    Command="{Binding MyCommand}"
                    CommandParameter="Button5"
                    Size="Large"
                  />
                    <Label Text="With Icons"/>
                    <local:CustomButton 
                    x:Name="ibutton"
                    Title = "XSmall"
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                    CommandParameter="Button5"
                    Size="XSmall"
                  />
                    <local:CustomButton 
                    x:Name="ibutton2"
                    Title = "Small"
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                 
                    CommandParameter="Button5"
                    Size="Small"
                  />
                    <local:CustomButton 
                    x:Name="ibutton3"
                    Title = "Default"
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                    CommandParameter="Button5"
                    Size="Default"
                  />
                    <local:CustomButton 
                    x:Name="ibutton4"
                    Title = "Large"
                    
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                    CommandParameter="Button5"
                   
                  />

                    <Label Text="Floating Buttons"/>

                    <local:CustomButton 
                    x:Name="fltbutton2"
                
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                    IsFloatingButton="True"
                    CommandParameter="Button5"
                    Size="XSmall"
                  />

                    <local:CustomButton 
                    x:Name="fltbutton"
                    Title = "XSmall"
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                    IsFloatingButton="True"
                    CommandParameter="Button5"
                    Size="XSmall"
                  />
                    <Label Text="Disabled Buttons"/>
                    <local:CustomButton 
                    x:Name="button413"
                    Title = "Large"
                    IsDisabled="True"
                    Command="{Binding MyCommand}"
                    CommandParameter="Button5"
                    Size="Large"
                  />

                    <local:CustomButton 
                    x:Name="ibutton12"
                    Title = "Large"
                    IsDisabled="True"
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                    CommandParameter="Button5"
                    Size="Large"
                    />
                    <local:CustomButton 
                    x:Name="disbutton"
                
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                    IsFloatingButton="True"
                    CommandParameter="Button5"
                    IsDisabled="True"
                    Size="XSmall"
                  />

                    <local:CustomButton 
                    x:Name="disbutton2"
                    Title = "XSmall"
                    Command="{Binding MyCommand}"
                    IconSource="icon.png"
                    IsFloatingButton="True"
                    CommandParameter="Button5"
                    IsDisabled="False"
                    Size="XSmall"
                  />
                </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
