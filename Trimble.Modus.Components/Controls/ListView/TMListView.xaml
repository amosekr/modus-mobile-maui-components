<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:base="clr-namespace:Trimble.Modus.Components"
             xmlns:enum="clr-namespace:Trimble.Modus.Components.Enums"
             xmlns:constant ="clr-namespace:Trimble.Modus.Components.Constant"
             xmlns:styles="clr-namespace:Trimble.Modus.Components.Styles"
             x:Name="tmListView"
             x:Class="Trimble.Modus.Components.TMListView"
                >

  <ContentView.Content>
    <StackLayout>
      <ListView x:Name="listView" RowHeight="56" SelectionMode="Single" 
                ItemsSource="{Binding Source={x:Reference tmListView}, Path=SelectableItemSource}"
                ItemTemplate="{Binding Source={x:Reference tmListView}, Path=ItemTemplate}"
                ItemSelected="listView_ItemSelected"
                >
      </ListView>
    </StackLayout>
  </ContentView.Content>




</ContentView>
