<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Name="CustomViewCell"
             x:Class="Trimble.Modus.Components.ListViewTemplateCell">
  <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
    <Grid.Triggers>
      <DataTrigger TargetType="Grid" Binding="{Binding IsSelected}" Value="True">
        <Setter Property="BackgroundColor" Value="Yellow" />
      </DataTrigger>
      <DataTrigger TargetType="Grid" Binding="{Binding IsSelected}" Value="False">
        <Setter Property="BackgroundColor" Value="White" />
      </DataTrigger>
    </Grid.Triggers>
    <!--<Label Text="Hello"/>-->
    <ContentView 
                 BindingContext="{Binding Data}"
                 Content="{Binding Source={x:Reference CustomViewCell}, Path=Content}">
    </ContentView>
    </Grid>
</ViewCell>

