<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:constants="clr-namespace:Trimble.Modus.Components.Constant"
             HorizontalOptions="Start"
             VerticalOptions="Center"
             x:Class="Trimble.Modus.Components.TMSwitch">
  <StackLayout x:Name="container" Orientation="Horizontal">
    <Border x:Name="border" HorizontalOptions="Start" VerticalOptions="Start" Stroke="Transparent">
      <Border.StrokeShape>
        <RoundRectangle CornerRadius="40" />
      </Border.StrokeShape>
      <BoxView x:Name="circle" Color="White" CornerRadius="40" BackgroundColor="Transparent" HorizontalOptions="Start"  VerticalOptions="Center" />
    </Border>
    <Label x:Name="switchText" HorizontalOptions="Center" VerticalOptions="Center"/>
  </StackLayout>
</ContentView>
